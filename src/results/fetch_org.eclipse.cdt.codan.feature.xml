<?xml version="1.0" encoding="UTF-8"?>

<!-- Fetch script for feature@org.eclipse.cdt.codan.feature -->

<project name="FetchScript" default="fetch">
	<property name="quiet" value="true"/>

	<target name="fetch">
		<antcall target="fetch.element"/>
		<antcall target="fetch.plugins"/>
		<antcall target="fetch.recursively"/>
	</target>
	<target name="fetch.element" if="featureOnly">
		<available property="${buildDirectory}/features/org.eclipse.cdt.codan.feature/feature.xml" file="${buildDirectory}/features/org.eclipse.cdt.codan.feature/feature.xml"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/features/org.eclipse.cdt.codan.feature/feature.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.feature"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan-feature"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/features"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
	</target>
	<target name="fetch.plugins" if="featureAndPlugins">
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.core/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.core/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.core/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.core/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.core/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.core"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.core"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.ui"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.ui"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.core.cxx/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.core.cxx/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.core.cxx/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.core.cxx/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.core.cxx/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.core.cxx"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.core.cxx"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui.cxx/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui.cxx/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui.cxx/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui.cxx/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.ui.cxx/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.ui.cxx"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.ui.cxx"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.checkers"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.checkers"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers.ui/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers.ui/plugin.xml"		/>
		<available property="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers.ui/plugin.xml" file="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers.ui/META-INF/MANIFEST.MF"		/>
		<antcall target="FetchFromCVS">
			<param name="cvsRoot" value=":pserver:anonymous@dev.eclipse.org/cvsroot/tools"/>
			<param name="fileToCheck" value="${buildDirectory}/plugins/org.eclipse.cdt.codan.checkers.ui/plugin.xml"/>
			<param name="elementName" value="org.eclipse.cdt.codan.checkers.ui"/>
			<param name="module" value="org.eclipse.cdt/codan/org.eclipse.cdt.codan.checkers.ui"/>
			<param name="reallyquiet" value="${cvs.reallyquiet}"/>
			<param name="tag" value="CDT_7_0_1"/>
			<param name="destinationFolder" value="${buildDirectory}/plugins"/>
			<param name="quiet" value="${cvs.quiet}"/>
		</antcall>
	</target>
	<target name="fetch.recursively" if="featuresRecursively">
	</target>
	<target name="FetchFromCVS" unless="${fileToCheck}">
		<cvs command="export -d ${elementName}" cvsRoot="${cvsRoot}" dest="${destinationFolder}" package="${module}" tag="${tag}" quiet="${quiet}" reallyquiet="${reallyquiet}" taskname="CVS - ${module}"		/>
	</target>

</project>
